{
  "name": "filehub",
  "version": "1.5.0",
  "description": "FILEHUB - A MAIOR COMUNIDADE DE FERRAMENTAS DO BRASIL",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LisboaCodes/filehub-app.git"
  },
  "keywords": [
    "electron",
    "session",
    "cookies",
    "share"
  ],
  "author": "FileHub",
  "license": "MIT",
  "build": {
    "appId": "com.filehub.app",
    "productName": "FileHub",
    "copyright": "Copyright Â© 2025 Creative Next - FileHub Plus",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "preload-splash.js",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FileHub",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "perMachine": false,
      "allowElevation": true
    },
    "mac": {
      "icon": "build/icons/mac/icon.icns",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "LisboaCodes",
      "repo": "filehub-app",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "mysql2": "^3.16.0"
  }
}
